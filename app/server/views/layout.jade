html
	head
		title HomeSharp - Home Automation Management Simplified
		link(rel='stylesheet', href='/vendor/bootstrap.min.css')
		link(rel='stylesheet', href='/css/style.css')

	body
		div#header
			div.container
				img(src="/../img/LogotypeDraft2.png", width="300", alt="HomeSharp Logotype")

		div.navbar.navbar-default.navbar-static-top
			div.container.menu
				div.navbar-header
					button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#navbar", aria-expanded="false", aria-controls="navbar")
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
				div#navbar.navbar-collapse.collapse
					ul.nav.navbar-nav
						li
							a(href="/home")
								| Home &nbsp;&nbsp;
								span.glyphicon.glyphicon-home
						li#devices.dropdown
							a(href="#", data-toggle="dropdown", role="button", aria-expanded="false").dropdown-toggle Devices &nbsp;&nbsp;
								span.glyphicon.glyphicon-th-list
							ul.dropdown-menu(role="menu")
								li
									a(href="/brand/netatmo") Netatmo
									a(href="/brand/telldus") Telldus
						li#settings
							a(href="/settings")
								| Settings &nbsp;&nbsp;
								span.glyphicon.glyphicon-wrench
					ul.nav.navbar-nav.navbar-right
						li#logout
							a(href="/logout")
								| Logout &nbsp;&nbsp;
								span.glyphicon.glyphicon-off


		block content

		footer.footer
			div.container
				p.text-muted Copyright &copy 2015 CobMedia - MIT License

		block scripts
