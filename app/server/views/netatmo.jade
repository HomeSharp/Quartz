
extends layout

block content
		div.navbar.navbar-fixed-top
			div.navbar-inner
				div.container-fluid
					ul#global-nav.nav.pull-left
						a(href='/home').brand Home#
					button#btn-logout.btn.btn-primary
						i.icon-lock.icon-white
						| Sign Out

		div.container.top-push
			h1 Home# - Netatmo
			if NetatmoConnected == true
				p You have authenticated with success, your Netatmo devices will show up here soon.
				p
					button#btn-unlinkNetatmo.btn.btn-primary Unlink account
			else
				p There are currently no Netatmo-account synced with Home#,&nbsp;
					a(href='https://api.netatmo.net/oauth2/authorize?client_id=54c64eaa485a8812863eadfd&redirect_uri=http://127.0.0.1:8080/brand/netatmo&scope=read_station%20read_thermostat%20write_thermostat&state=#{state_token}') sync one now?

block scripts
	script(src='/vendor/jquery.min.js')
	script(src='/vendor/jquery.form.js')
	script(src='/vendor/bootstrap-modal.js')
	script(src='/vendor/bootstrap-transition.js')
	script(src='/js/views/netatmo.js')
	script(src='/js/controllers/netatmoController.js')
